<div class="container d-flex mt-5">
  <div class="row justify-content-center" id="name">
    <div class="col-6">
      <h1 class="heading text-primary fw-bolder"><%= @tent.title %></h1>
      <%= cl_image_tag @tent.photo.key, style: "width: 100%", crop: :fill, class: "img" %>
      <ul class="list-group fs-5 show-ul">
        <li class="list-group-item">⛺ <%= @tent.description %></li>
        <li class="list-group-item">🧍🏼‍♂️ Capacity: <%= @tent.capacity %></li>
        <li class="list-group-item">📍 Location: <%= @tent.location %></li>
        <li class="list-group-item">💸 Price: £<%= @tent.price %></li>
      </ul>
      <br>
      <p class="fs-5"><%= link_to "Back to tents", tents_path, class: "btn btn-warning btn-lg" %></p>
    </div>

  <div class="col-6 fs-5">
    <h1 class="heading text-warning fw-bolder">Book this tent ✔️</h1>
      <%= simple_form_for [@tent, @booking] do |f| %>
      <%= f.input :start_date, html5: true %>
      <%= f.input :end_date, html5: true %>
      <%= f.submit :Confirm %>
    <% end %>
    <br>
    <div class="map" style="width: 100%; height: 600px; margin: auto;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>
