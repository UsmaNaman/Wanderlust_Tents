<div class="text-center">
  <h1>Complete list of bookings</h1>
</div>

<div class="container">
  <h2>Past bookings</h2>
  <div class="cards">
      <% @past_bookings.each do |booking| %>
        <%# <% if booking.photo.attached? %>
        <%# <%= link_to booking_path(booking) do  %>

          <div class="card-trip">
            <%= cl_image_tag booking.tent.photo.key, height: 300, width: 350, crop: :fill %>
            <div class="card-trip-infos">
              <div>
                 <%= booking.tent.title %>
                <br>
                <%= booking.tent.location %>
                <br>
                <%= link_to "Booking details", booking_path(booking) %>
              </div>
            </div>
          </div>
        <% end %>
  </div>
</div>

