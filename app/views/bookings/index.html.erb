<h1>Bookings Index Page</h1>

<% @bookings.each do |booking| %>
  <% if booking.start_date > Date.today  %>
    <% if booking.status == "Pending host validation" %>
    <li class = "dashboard">
      <div>
        <h2><%= @booking.tent.title %></h2>
        <p>Description: <%= booking.tent.description %></p>
        <p>Capacity: <%= booking.tent.capacity %></p>
        <p>Location: <%= booking.tent.location %></p>
        <p>Price: £<%= booking.price %></p>
      </div>
    <div>
      <ul>
        <li><strong>Wait for your host to confirm. Stay tuned !</strong></li>
        <li><%= <%= link_to "Delete this booking", booking_path(booking), method: :delete, class:"btn btn-default", data: {confirm: "Are you sure"} %> %></li>
      </ul>
    </div>
  </li>
<%= end %>

<% if booking.status == "Confirmed" %>
  <li>
    <div>
      <h2><%= <%= booking.tent.title %> %></h2>
        <p>Capacity: <%= booking.tent.capacity %></p>
        <p>Location: <%= booking.tent.location %></p>
        <p>Price: £<%= booking.price %></p>
    </div>
    <div>
      <ul>
        <li><strong>Your booking is confirmed !</strong></li>
        <li><%= link_to "Delete this booking", booking_path(booking), method: :delete, class:"btn btn-default", data: {confirm: "Are you sure"} %></li>
      </ul>
    </div>
  </li>
<% end %>

<% if booking.status == "Canceled" %>
  <li>
    <div>
      <h2><%= booking.tent.title %></h2>
        <p>Capacity: <%= booking.tent.capacity %></p>
        <p>Location: <%= booking.tent.location %></p>
        <p>Price: £<%= booking.price %></p>
    </div>
    <div>
      <ul>
        <li><p><%= booking.tent.user.first_name%> canceled your booking </p><li>
      </ul>
    </div>
  </li>
<% end %>
<% end %>
