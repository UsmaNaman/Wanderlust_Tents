<div class="container d-flex mt-5">
  <div class="row justify-content-center" id="name" style="max-width: 50vw;">
    <div class="col-12 px-5 map" style="text-align: center;">
      <h1><%= @booking.tent.title %></h1>
      <br>
      <%= cl_image_tag @booking.tent.photo.key, style: "width: 100%", crop: :fill, class: "img" %>
      <br>
      <ul style= "padding: 0">
        <li class="list-group-item">Description: <%= @booking.tent.description %></li>
        <li class="list-group-item">Capacity: <%= @booking.tent.capacity %></li>
        <li class="list-group-item">Location: <%= @booking.tent.location %></li>
        <li class="list-group-item">Booking Date: <%= @booking.start_date.strftime('%d %b %Y') %> to <%= @booking.end_date.strftime('%d %b %Y') %></li>
        <li class="list-group-item">Price: Â£<%= @booking.tent.price.to_i %></li>
      </ul>
    </div>
  </div>
  <div class="map" style="width: 100%; height: 682px; margin: auto;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
