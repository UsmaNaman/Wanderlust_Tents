<div class="container" id="lastthreetents">
  <h2 class="text-center">Featured tents</h2>
  <div class="container">
  <div class="cards">
      <% @tents.each do |tent| %>
        <% if tent.photo.attached?%>
        <%= link_to tent_path(tent) do %>
          <div class="card-category"
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
          url('<%= cl_image_path tent.photo.key %>');"
          >
            <p><%= tent.title %></p>
            <p>Â£<%= tent.price %></p>
          </div>
          <% end %>
        <% end %>
      <% end %>
  </div>
</div>
</div>
