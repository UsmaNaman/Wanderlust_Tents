 <div class="box-container">
  <div class="banner">
    <div class="banner-content">
      <h1 class="text-warning" id="main-title">Tent with us! ‚õ∫</h1>
      <form action="/tents" class="form-inline">
      <div class="row-cols-lg-auto">
        <div class="col-8">
          <input name="text" class="form-control input-lg" placeholder="Location?">
        </div>
        <div class="col-2">
          <input type="submit" class="btn btn-warning btn-md mt-3" value="Search">
        </div>
      </div>
        </div>
      </form>
    </div>
  </div>

  <div class="box-container">
    <h1 class="heading text-primary">‚õ∞Ô∏è Featured Tents ‚õ∞Ô∏è</h1>
    <div class="cards">
        <% @tents.each do |tent| %>
          <% if tent.photo.attached?%>
            <%= link_to tent_path(tent) do %>
              <div class="card-trip">
                <%= cl_image_tag tent.photo.key, height: 300, width: 500, crop: :fill %>
                <div class="card-trip-infos">
                  <div>
                    <span><%= tent.title %></span>
                    <br>
                    üìç <span class="locationcolor"><%= tent.location %></span>
                    <br>
                    ¬£<span><%= tent.price.to_i %></span>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
    </div>
  </div>

  <section class="icons-container box-container homepage-background">

      <div class="icons">
          <%= image_tag "icon-1.png", id: "background" %>
          <div class="info">
              <h3>free delivery & pickup</h3>
              <span>on all orders</span>
          </div>
      </div>

      <div class="icons">
        <%= image_tag "icon-2.png", id: "background" %>
          <div class="info">
              <h3>10 days returns</h3>
              <span>moneyback guarantee</span>
          </div>
      </div>

      <div class="icons">
      <%= image_tag "icon-4.png", id: "background" %>
          <div class="info">
              <h3>secure payments</h3>
              <span>protected by paypal</span>
          </div>
      </div>

  </section>
</div>
